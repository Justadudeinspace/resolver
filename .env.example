# Telegram
BOT_TOKEN=CHANGE_ME

# LLM (optional)
USE_LLM=true
OPENAI_API_KEY=
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.4
EMBEDDING_MODEL=text-embedding-3-small
RATE_LIMIT_PER_USER=5
MAX_INPUT_LENGTH=2000

# DB
DB_PATH=./data/resolver.sqlite3

# Feature flags (v2 disabled by default)
FEATURE_V2_PERSONAL=false
FEATURE_V2_GROUPS=false

# Payments (use a 32+ char secret for invoice signing)
INVOICE_SECRET=CHANGE_ME

# Logging
LOG_LEVEL=INFO
